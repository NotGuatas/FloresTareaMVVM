<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="FloresTareaMVVM.JFAppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:FloresTareaMVVM.Views"
    xmlns:local="clr-namespace:FloresTareaMVVM"
    Shell.FlyoutBehavior="Disabled"
    Title="FloresTareaMVVM">

    <TabBar>
        <ShellContent
        Title="Notes"
        ContentTemplate="{DataTemplate views:JFAllNotesPage}"
        Icon="{OnPlatform 'icon_notes.png', iOS='icon_notes_ios.png', MacCatalyst='icon_notes_ios.png'}" />

        <ShellContent
        Title="About"
        ContentTemplate="{DataTemplate views:JFAboutPage}"
        Icon="{OnPlatform 'icon_about.png', iOS='icon_about_ios.png', MacCatalyst='icon_about_ios.png'}" />
    </TabBar>

</Shell>
